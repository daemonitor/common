{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "*"
      ],
      "@daemonitor/common": ["./node_modules/@daemonitor/common"]

    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "../frontend/.nuxt/types/imports.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
